@using BeInEvent.Models
@model BeInEvent.Models.AdminViewModel
    @{ 
        Layout = "~/Views/Shared/_Admin.cshtml";

    }
    <style>
        .admin-c{
            margin-left:300px;
            margin-top:20px;
        }
    </style>
    <div class="admin-c">

    @using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="form-group col-md-10">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                <div class="col-md-7">

                    @Html.TextBoxFor(m => m.Email, "Email", new { @class = "form-username form-control", @id = "form-username" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group  col-md-10">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                <div class="col-md-7">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-password form-control", @id = "form-password" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-10">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                <div class="col-md-7">

                    @Html.PasswordFor(m => m.Password, new { @class = "form-username form-control", @id = "form-username" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>


        <br />
        <br />
                            <div class="form-group col-md-8">

                                <input type="submit" value="Add Admin" class="btn btn-primary" />

                            </div>
    }
</div>