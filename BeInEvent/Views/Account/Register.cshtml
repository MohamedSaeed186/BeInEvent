@using BeInEvent.Models
@model BeInEvent.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    IEnumerable<Category> category = ViewBag.cat;
    SelectList city = ViewBag.city;

}
<style>
    .form-bottom{
        background-color:rgba(29, 40, 48, 0.30);
        padding:20px;
        border-radius:10px;
    }
    .control-label{
        color:deeppink;
    }
</style>

<div class="imgb jumbotron text-center">
    <div class="container" >
        <br />
        <br />
        <br />
        <br />
                <div class="form-bottom">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        
                            <div class="row">
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-7">

                                        @Html.TextBoxFor(m => m.Email, "Email", new { @class = "form-username form-control", @id = "form-username" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group  col-md-6">
                                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-7">
                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-password form-control", @id = "form-password" })
                                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-7">

                                        @Html.PasswordFor(m => m.Password, new { @class = "form-username form-control", @id = "form-username" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group  col-md-6">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-7">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-password form-control", @id = "form-password" })
                                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(m => m.phone, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-7">

                                        @Html.TextBoxFor(m => m.phone, "Email", new { @class = "form-username form-control", @id = "form-username" })
                                        @Html.ValidationMessageFor(m => m.phone, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group  col-md-6">
                                    @Html.LabelFor(m => m.UserCity, new { @class = "col-md-3 control-label" })
                                    <div class="col-md-7">
                                        @*@Html.DropDownList("ID", ViewBag.city as SelectList)*@


                                        @Html.DropDownListFor(m=>m.UserCity, ViewBag.city as SelectList)
                                        @Html.ValidationMessageFor(m => m.UserCity, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>


                           <div class="form-group row">

                            @foreach (Category item in category)
                            {
                                <div class="col-md-4">
                                    @* @Html.CheckBox(item.CategoryID.ToString())*@
                                    <input type="checkbox" id="@item.CategoryID" value="@item.CategoryID" name="categories" />
                                    @Html.Label(item.CategoryName, new { @class = "col-md-2 control-label" })

                                </div>
                            }

                        </div>


                        <div class="form-group col-md-offset-4">
                            
                                <input type="submit" value="Register" class="btn btn-primary" />
                            
                        </div>
                    }

                </div>
            </div>
  

        </div>


  

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    }
    